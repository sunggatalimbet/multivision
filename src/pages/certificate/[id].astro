---

<Layout>
  <div class="flex flex-col bg-no-repeat bg-cover bg-center bg-[url('/src/assets/hero-bg.jpg')] min-h-screen px-[10px] lg:px-12 py-[22px] lg:py-[34px]">
    <!-- Main Content -->
    <div class="flex-1 flex items-center justify-center py-20">
      <div class="max-w-4xl mx-auto px-4 certificate-content">
        {certificate ? (
          <!-- Certificate Found -->
          <div class="text-center">
            <!-- Page Title -->
            <h1 class="text-3xl lg:text-4xl font-bold text-white mb-12">Проверка сертификата</h1>
            
            <!-- Certificate Card -->
            <div class="bg-white/10 backdrop-blur-lg rounded-2xl border border-white/20 p-8 lg:p-12 shadow-2xl">
              <!-- Verification Status -->
              <div class="mb-8">
                <div class="flex items-center justify-center mb-4">
                  <div class="w-12 h-12 bg-green-500 rounded-full flex items-center justify-center mr-4">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                  </div>
                  <h2 class="text-2xl font-bold text-green-400">Сертификат действителен</h2>
                </div>
              </div>

              <!-- Certificate Details -->
              <div class="space-y-6 text-left">
                <!-- Student Info -->
                <div class="bg-white/5 rounded-xl p-6 border border-white/10">
                  <h3 class="text-lg font-semibold text-white mb-4 flex items-center">
                    <svg class="w-5 h-5 text-blue-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                    </svg>
                    Информация о студенте
                  </h3>
                  <div class="space-y-3">
                    <div class="flex justify-between items-center">
                      <span class="text-white/70 font-medium">ФИО:</span>
                      <span class="text-white font-bold text-lg">{certificate.studentName}</span>
                    </div>
                    <div class="flex justify-between items-center">
                      <span class="text-white/70 font-medium">ID Сертификата:</span>
                      <span class="text-blue-300 font-mono font-bold">{certificate.id}</span>
                    </div>
                  </div>
                </div>

                <!-- Course Info -->
                <div class="bg-white/5 rounded-xl p-6 border border-white/10">
                  <h3 class="text-lg font-semibold text-white mb-4 flex items-center">
                    <svg class="w-5 h-5 text-purple-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                    </svg>
                    Детали курса
                  </h3>
                  <div class="space-y-3">
                    <div>
                      <span class="text-white/70 font-medium">Название курса:</span>
                      <p class="text-white font-bold mt-1">{certificate.courseName}</p>
                    </div>
                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                      <div>
                        <span class="text-white/70 font-medium">Продолжительность:</span>
                        <p class="text-white font-bold">{certificate.duration}</p>
                      </div>
                      <div>
                        <span class="text-white/70 font-medium">Оценка:</span>
                        <p class="text-green-400 font-bold">{certificate.grade}</p>
                      </div>
                    </div>
                    <div>
                      <span class="text-white/70 font-medium">Преподаватель:</span>
                      <p class="text-white font-bold mt-1">{certificate.instructor}</p>
                    </div>
                  </div>
                </div>

                <!-- Skills -->
                <div class="bg-white/5 rounded-xl p-6 border border-white/10">
                  <h3 class="text-lg font-semibold text-white mb-4 flex items-center">
                    <svg class="w-5 h-5 text-emerald-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>
                    </svg>
                    Приобретенные навыки
                  </h3>
                  <div class="flex flex-wrap gap-2">
                    {certificate.skills.map((skill: string) => (
                      <span class="bg-emerald-500/20 border border-emerald-400/40 text-emerald-300 px-3 py-1 rounded-full text-sm font-medium">
                        {skill}
                      </span>
                    ))}
                  </div>
                </div>

                <!-- Dates -->
                <div class="bg-white/5 rounded-xl p-6 border border-white/10">
                  <h3 class="text-lg font-semibold text-white mb-4 flex items-center">
                    <svg class="w-5 h-5 text-yellow-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                    </svg>
                    Даты
                  </h3>
                  <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                    <div>
                      <span class="text-white/70 font-medium">Дата завершения:</span>
                      <p class="text-white font-bold">{certificate.completionDate}</p>
                    </div>
                    <div>
                      <span class="text-white/70 font-medium">Дата выдачи:</span>
                      <p class="text-white font-bold">{certificate.issueDate}</p>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Footer -->
              <div class="mt-8 pt-6 border-t border-white/20 text-center">
                <p class="text-white/70 text-sm mb-4">
                  Этот сертификат может быть аутентифицирован через нашу систему.
                </p>
                <div class="flex flex-col sm:flex-row justify-center items-center gap-2 text-white/60 text-xs">
                  <span>ID Сертификата: <span class="font-mono text-blue-300">{certificate.id}</span></span>
                </div>
              </div>
            </div>
          </div>
        ) : (
          <!-- Certificate Not Found -->
          <div class="text-center">
            <h1 class="text-3xl lg:text-4xl font-bold text-white mb-12">Проверка сертификата</h1>
            
            <div class="bg-white/10 backdrop-blur-lg rounded-2xl border border-white/20 p-8 lg:p-12 shadow-2xl">
              <h2 class="text-2xl font-bold text-red-400 mb-4">Сертификат не найден</h2>
              <p class="text-white/70 mb-6">
                Сертификат с данным ID не существует или QR-код недействителен.
              </p>
              <a href="/" class="inline-block bg-white text-black px-6 py-3 rounded-[30px] font-medium hover:bg-gray-200 transition-colors">
                Вернуться на главную
              </a>
            </div>
          </div>
        )}
      </div>
    </div>

    <!-- Footer -->
    <footer class="mt-auto py-8 border-t border-white/10">
      <div class="max-w-4xl mx-auto px-4 text-center">
        <h3 class="text-xl font-bold text-white mb-4">Остались вопросы?</h3>
        <p class="text-white/70 mb-6">
          Мы с радостью ответим на ваши вопросы по курсам, программе обучения или записи. 
          Наша команда всегда на связи.
        </p>
        <div class="flex flex-col sm:flex-row justify-center items-center gap-6 text-white/80">
          <div class="flex items-center">
            <svg class="w-5 h-5 text-blue-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
            <span>8 777 007 07 09</span>
          </div>
          <div class="flex items-center">
            <svg class="w-5 h-5 text-blue-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            <span>multivision@gmail.com</span>
          </div>
        </div>
        <p class="text-white/50 text-sm mt-6">
          © 2025 Multivision. Все права защищены.
        </p>
      </div>
    </footer>
  </div>
</Layout>

<script>
  import gsap from "gsap";
  
  // Simple fade-in animation
  gsap.fromTo(".certificate-content", {
    opacity: 0,
    y: 30
  }, {
    opacity: 1,
    y: 0,
    duration: 0.8,
    ease: "power2.out"
  });
</script>
